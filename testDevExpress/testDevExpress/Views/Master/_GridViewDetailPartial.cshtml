@Html.DevExpress().GridView(
    settings =>
    {
        settings.Name = "detailGrid_" + ViewData["PersonaID"];
        
        settings.CallbackRouteValues = new { Controller = "MasterDetail", Action = "MasterDetailDetailPartial", PersonaID = ViewData["PersonaID"] };
        settings.Width = Unit.Percentage(100);
        settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "Master", Action = "GridViewPartialAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "Master", Action = "GridViewPartialUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "Master", Action = "GridViewPartialDelete" };
      
        
        settings.KeyFieldName = "TelefonoID";
        settings.Columns.Add("Numero");
        
      
        settings.DataBinding = (sender, e) =>
        {
            ((MVCxGridView)sender).ForceDataRowType(typeof(testDevExpress.Models.clsTelefono));
        };
       

       
       
    }).Bind(Model).GetHtml()
